{
  "name": "css-style-sorter",
  "displayName": "CSS Style Sorter",
  "description": "Automatically sort CSS styles for neater stylesheets",
  "icon": "https://github.com/dejmedus/css-style-sorter/blob/main/images/css-style-sorter.png",
  "homepage": "https://github.com/dejmedus/css-style-sorter",
  "version": "0.0.1",
  "publisher": "dejmedus",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:css"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "css",
        "extensions": [
          ".css"
        ]
      }
    ],
    "contributes": {
      "configuration": {
        "title": "CSS Style Sorter",
        "type": "object",
        "properties": {
          "css-style-sorter.sortOrder": {
            "type": "array",
            "default": [
              "*",
              "Box Model",
              "Typography",
              "Background and Visual",
              "Grid",
              "Flexbox",
              "Margin and Padding",
              "Border",
              "Width and Height",
              "Transformations and Animations",
              "Other"
            ],
            "items": {
              "type": "string"
            },
            "description": "Sort order for CSS categories"
          },
          "css-style-sorter.categories": {
            "type": "object",
            "default": {
              "categories": {
                "*": [],
                "Box Model": [
                  "display",
                  "position",
                  "top",
                  "right",
                  "bottom",
                  "left",
                  "z-index",
                  "float",
                  "clear",
                  "box-sizing"
                ],
                "Grid": [
                  "grid",
                  "grid-template",
                  "grid-template-areas",
                  "grid-template-rows",
                  "grid-template-columns",
                  "grid-row",
                  "grid-row-start",
                  "grid-row-end",
                  "grid-column",
                  "grid-column-start",
                  "grid-column-end",
                  "grid-auto-rows",
                  "grid-auto-columns",
                  "grid-auto-flow",
                  "grid-gap",
                  "grid-row-gap",
                  "grid-column-gap",
                  "justify-items",
                  "align-items",
                  "place-items",
                  "justify-content",
                  "align-content",
                  "place-content",
                  "grid-auto-flow",
                  "grid-template-rows",
                  "grid-template-columns",
                  "grid-template-areas",
                  "grid-gap",
                  "grid-row-gap",
                  "grid-column-gap",
                  "grid-area",
                  "grid-row",
                  "grid-column"
                ],
                "Flexbox": [
                  "flex",
                  "flex-grow",
                  "flex-shrink",
                  "flex-basis",
                  "justify-content",
                  "align-items",
                  "align-content",
                  "order"
                ],
                "Margin and Padding": [
                  "margin",
                  "margin-top",
                  "margin-right",
                  "margin-bottom",
                  "margin-left",
                  "padding",
                  "padding-top",
                  "padding-right",
                  "padding-bottom",
                  "padding-left"
                ],
                "Width and Height": [
                  "width",
                  "min-width",
                  "max-width",
                  "height",
                  "min-height",
                  "max-height"
                ],
                "Border": [
                  "border",
                  "border-width",
                  "border-style",
                  "border-color",
                  "border-top",
                  "border-top-width",
                  "border-top-style",
                  "border-top-color",
                  "border-right",
                  "border-right-width",
                  "border-right-style",
                  "border-right-color",
                  "border-bottom",
                  "border-bottom-width",
                  "border-bottom-style",
                  "border-bottom-color",
                  "border-left",
                  "border-left-width",
                  "border-left-style",
                  "border-left-color",
                  "border-radius",
                  "border-top-left-radius",
                  "border-top-right-radius",
                  "border-bottom-left-radius",
                  "border-bottom-right-radius"
                ],
                "Typography": [
                  "font",
                  "font-family",
                  "font-size",
                  "font-style",
                  "font-weight",
                  "color",
                  "text-align",
                  "text-decoration",
                  "text-transform",
                  "text-indent",
                  "line-height",
                  "letter-spacing",
                  "white-space"
                ],
                "Background and Visual": [
                  "background",
                  "background-color",
                  "background-image",
                  "background-repeat",
                  "background-position",
                  "background-size",
                  "background-attachment",
                  "opacity",
                  "box-shadow",
                  "text-shadow"
                ],
                "Transformations and Animations": [
                  "transform",
                  "transform-origin",
                  "transition",
                  "animation",
                  "animation-name",
                  "animation-duration",
                  "animation-delay",
                  "animation-timing-function",
                  "animation-iteration-count",
                  "animation-direction",
                  "animation-fill-mode"
                ],
                "Other": [
                  "cursor",
                  "visibility",
                  "overflow",
                  "overflow-x",
                  "overflow-y",
                  "list-style",
                  "list-style-type",
                  "list-style-position",
                  "list-style-image",
                  "pointer-events",
                  "user-select"
                ]
              }
            },
            "items": {
              "type": "string"
            },
            "description": "List of properties in CSS categories"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@types/css-tree": "^2.3.1",
    "css-tree": "^2.3.1"
  }
}